@model practicamvc.Models.DetallePedidoModel
@{
    ViewData["Title"] = "Eliminar detalle";
}
<h2 class="mb-3">Eliminar detalle</h2>

<div class="alert alert-warning" role="alert">
    <strong>Atención:</strong> Esta acción no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Pedido</dt>
            <dd class="col-sm-9">#@Model.IdPedido — @(Model.Pedido?.Cliente?.Nombre ?? "—")</dd>
            <dt class="col-sm-3">Producto</dt>
            <dd class="col-sm-9">@Model.Producto?.Nombre</dd>
            <dt class="col-sm-3">Cantidad</dt>
            <dd class="col-sm-9">@Model.Cantidad</dd>
            <dt class="col-sm-3">Precio unit. (Bs)</dt>
            <dd class="col-sm-9">@Model.PrecioUnitario.ToString("N2")</dd>
            <dt class="col-sm-3">Subtotal (Bs)</dt>
            <dd class="col-sm-9">@((Model.Cantidad * Model.PrecioUnitario).ToString("N2"))</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
