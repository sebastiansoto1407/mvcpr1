@model practicamvc.Models.PedidoModel
@{
    ViewData["Title"] = "Eliminar pedido";
}
<h2 class="mb-3">Eliminar pedido</h2>

<div class="alert alert-warning" role="alert">
    <strong>Atención:</strong> Esta acción no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3"># Pedido</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaPedido.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nombre</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
            <dt class="col-sm-3">Monto total (Bs)</dt>
            <dd class="col-sm-9">@Model.MontoTotal.ToString("N2")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
