@model practicamvc.Models.PedidoModel
@{
    ViewData["Title"] = "Nuevo pedido";
}
<h2>Nuevo pedido</h2>

<form asp-action="Create" novalidate class="card shadow-sm p-3" id="pedidoFormCreate">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="FechaPedido" class="form-label"></label>
            <input asp-for="FechaPedido" class="form-control" type="date" />
            <span asp-validation-for="FechaPedido" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Cliente</label>
            <select asp-for="IdCliente" class="form-select" asp-items="(SelectList)ViewBag.Clientes"></select>
            <span asp-validation-for="IdCliente" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Estado" class="form-label"></label>
            <select asp-for="Estado" class="form-select" asp-items="(SelectList)ViewBag.Estados"></select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 col-md-4">
        <label asp-for="MontoTotal" class="form-label"></label>
        <input asp-for="MontoTotal" class="form-control" inputmode="decimal" step="0.01" min="0" />
        <span asp-validation-for="MontoTotal" class="text-danger"></span>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
