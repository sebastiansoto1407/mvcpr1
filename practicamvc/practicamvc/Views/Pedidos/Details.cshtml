@model practicamvc.Models.PedidoModel
@{
    ViewData["Title"] = "Detalle de pedido";
}
<h2>Detalle</h2>

<div class="card shadow-sm p-3">
    <dl class="row mb-0">
        <dt class="col-sm-3"># Pedido</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.FechaPedido.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Nombre</dd>
        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Estado</dd>
        <dt class="col-sm-3">Monto total (Bs)</dt>
        <dd class="col-sm-9">@Model.MontoTotal.ToString("N2")</dd>
    </dl>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
