@model IEnumerable<practicamvc.Models.ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Clientes</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo cliente</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="q" value="@ViewBag.Q" class="form-control" placeholder="Buscar por nombre, email, teléfono..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th style="width:190px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Email</td>
                <td>@c.Telefono</td>
                <td>@(string.IsNullOrWhiteSpace(c.Direccion) ? "—" : c.Direccion)</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info text-white">Ver</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
