@model practicamvc.Models.ProductoModel
@{
    ViewData["Title"] = "Editar producto";
}
<h2>Editar producto</h2>

<form asp-action="Edit" novalidate class="card shadow-sm p-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <!-- mismos campos que Create :)xd -->
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" maxlength="120" required />

        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3" maxlength="500"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" inputmode="decimal" step="0.01" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" inputmode="numeric" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
