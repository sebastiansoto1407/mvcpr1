@model IEnumerable<practicamvc.Models.ProductoModel>
@{
    ViewData["Title"] = "Productos";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Productos</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo producto</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="q" value="@ViewBag.Q" class="form-control" placeholder="Buscar por nombre.." />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th class="text-end">Precio (Bs)</th>
            <th class="text-end">Stock</th>
            <th style="width:190px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@(string.IsNullOrWhiteSpace(item.Descripcion) ? "—" : item.Descripcion)</td>
                <td class="text-end">@item.Precio.ToString("N2")</td>
                <td class="text-end">@item.Stock</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
